package ohos.business_exception

import ohos.labels.APILevel

@!APILevel[
    21,
    atomicservice: true,
    crossplatform: true,
    stagemodelonly: true,
    syscap: "SystemCapability.ArkUI.ArkUI.Full"
]
public open class BusinessExceptionEx <: Exception {
    @!APILevel[
        21,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public let code: Int32
    @!APILevel[
        21,
        atomicservice: true,
        crossplatform: true,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public init(code: Int32, msg: String) {
        super(msg)
        this.code = code
    }

    protected override func getClassName(): String {
        "BusinessException"
    }

    @!APILevel[
        21,
        atomicservice: true,
        crossplatform: true,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public open func toString(): String {
        let className: String = getClassName()
        let message: String = this.message
        if (message.isEmpty()) {
            return "${className}:  errorcode: ${code}"
        }
        return "${className}: errorcode: ${code}, message: ${message}"
    }
}

public class BusinessError<T> <: BusinessExceptionEx {
    public var data: T

    public init (data: T, code: Int32, msg: String) {
        super(code, msg)
        this.data = data
    }
}

public type AsyncCallbackEx<T> = (Option<BusinessExceptionEx>, Option<T>) -> Unit
